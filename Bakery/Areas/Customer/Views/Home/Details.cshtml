@model ShoppingCart

<br />
<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card  container">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h3 class="text-white-30">@Model.Product.Name</h3>  
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5>Flavour :<span class="text-primary"> @Model.Product.Flavor</span></h5>
                        </div>
                        <div class="row pl-2">
                            <h5>Category: <span class="text-secondary"> @Model.Product.Category.Name</span></h5>
                        </div>
                        <div class="row pl-2">
                            <h5>Price: <span class="text-info">@Model.Product.Price.ToString("c")</span></h5>
                        </div>
                        <div class="row pl-2">
                            <h5>Size: <span class="text-danger"> @Model.Product.Size cm</span></h5>
                        </div>
                        <br />
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"><input asp-for="Count" class="form-control"  width="25%"/></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" class="card-img-top rounded img"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-outline-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

