@model IEnumerable<Bakery.Models.Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 trans">
            <div class="row p-2">
               
                    <div class="card">
                        <img  src="@product.ImageUrl" class="card-img-top rounded img"/>
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Name</p>
                            <p class="card-title h6 text-secondary">@product.Flavor</p>
                            <p class="card-title h7 text-danger">@product.Category.Name</p>
                        </div>
                        <div class="pl-1">
                            <p>Price: <b>@product.Price.ToString("c")</b></p>
                        </div>
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-outline-primary">Details <i class="bi bi-bookmarks"></i></a>

                    </div>
                
            </div>
          
        </div>
    }
</div>