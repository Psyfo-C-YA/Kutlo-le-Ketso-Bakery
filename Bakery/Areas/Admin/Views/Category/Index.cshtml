@model IEnumerable<Bakery.Models.Category>

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Category List </h2>
    </div>
</div>

<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name 
            </th>
            <th>
                Display Order
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="30%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="30%">
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td wdth="30%">
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                    Edit <i class="bi bi-pencil"></i>
                </a>
               @* <a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    Delete <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary">
        Create New &nbsp; <i class="bi bi-plus-circle"></i>
    </a>
</p>
